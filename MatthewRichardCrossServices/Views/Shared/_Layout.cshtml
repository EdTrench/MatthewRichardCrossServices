<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    
    <link href="@Url.Content("../Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("../Content/skins/ie7/skin.css")" rel="stylesheet" type="text/css" />

    <script src="@Url.Content("../Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("../Scripts/jquery-1.4.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("../Scripts/lib/jquery.jcarousel.min.js")" type="text/javascript"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            jQuery('#mycarousel').jcarousel();
            visible: 1
        });
    </script>
</head>
<body>
    <div class="page">
        <div id="header">
            <div id="title">
                <h1>Matthew Richard Cross Services</h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <div id="menucontainer">
                <ul id="menu">
                    <li>@Html.ActionLink("Contact Me", "About", "Home")</li>
                    <li>@Html.ActionLink("Enquire", "About", "Home")</li>
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                </ul>
            </div>
        </div>
        <div id="main">
            @RenderBody()
        </div>
        <div id="footer">
        </div>
    </div>
</body>
</html>
