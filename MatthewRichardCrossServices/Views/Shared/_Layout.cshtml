<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    
    <link href="@Url.Content("../Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("../Content/skins/ie7/skin.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("../Content/skins/ie7/skin_carousel_item.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("../Content/skins/captify_text/skin.css")" rel="stylesheet" type="text/css" />

    <script src="@Url.Content("../Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("../Scripts/jquery-1.4.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("../Scripts/lib/jquery.jcarousel.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("../Scripts/lib/captify.tiny.js")" type="text/javascript"></script>

    <script type="text/javascript">
        //JCarousel Summary
        $(document).ready(function () {
            jQuery('.mycarousel').jcarousel({
                scroll: 1,
                visible: 1,
                wrap: "circular",
            });
        });

        //JCarousel Item
        $(document).ready(function () {
            jQuery('.mycarousel_item').jcarousel({
                scroll: 1,
                visible: 1,
                wrap: "circular",
            });
        });

        //Captify
        $(document).ready(function () {
            $('.mycaptify').captify({
                // all of these options are... optional
                // speed of the mouseover effect
                speedOver: 'fast',
                // speed of the mouseout effect
                speedOut: 'normal',
                // how long to delay the hiding of the caption after mouseout (ms)
                hideDelay: 500,
                // 'fade', 'slide', 'always-on'
                animation: 'slide',
                // text/html to be placed at the beginning of every caption
                prefix: "",
                // opacity of the caption on mouse over
                opacity: '0.7',
                // the name of the CSS class to apply to the caption box
                className: 'caption-bottom',
                // position of the caption (top or bottom)
                position: 'bottom',
                // caption span % of the image
                spanWidth: '100%'
            });
        });

    </script>
</head>
<body>
    <div class="page">
        <div id="header"></div>
            <div id="logindisplay">
                <ul>
                    <li>@Html.Partial("_LogOnPartial")</li>
                </ul>
            </div>
            <div id="title">
                <h1>@Html.ActionLink("MATTHEW RICHARD CROSS SERVICES", "Index", "Home")</h1>
            </div>
                <ul id="menu">
                    <li class="mainmenu">@Html.ActionLink("HOME", "Index", "Home") / </li>
                    <li class="mainmenu">@Html.ActionLink("ABOUT ME", "Index", "Home") / </li>
                    <li class="mainmenu">@Html.ActionLink("CONTACT ME","Create", "Contact") / </li>
                    <li class="mainmenu">@Html.ActionLink("TESTIMONIALS", "Index", "Testimonial")</li>
                </ul>
            
        <div id="main">
            @RenderBody()
        </div>
        <div id="footer">
            <h1>07861 291943</h1>
            <h2>Plastering, Decoration, Renovation</h2>
        </div>
    </div>
</body>
</html>
